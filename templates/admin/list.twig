{% extends 'admin/layout.twig' %}

{% block title %}
    {{ title }}
{% endblock %}


{% block content %}
    {#<style>#}
    {#.table .sorting i{#}
    {#font-size: 14px;#}
    {#float: right;#}
    {#padding-top: 2px;#}
    {#padding-left: 7px;#}
    {#padding-right: 7px;#}
    {#/*margin: 0;*/#}
